/* pages/chooseLib/chooseLib.wxss */

@import "../../style/guide.wxss";

.black {
  color: black;
}
.detailPart{
  width:18rem;
}
.request-text{
  width:30%;
  text-align: center;
}
.request-content{
  width:70%;
  font-size:28rpx;
  line-height:45rpx;
  margin-top:0.5rem;
  color:#000;
}
.progress{
  height: 50rpx;
  margin-top:1rem;
  width: 85%;
  position: relative;
  color:#ffffff;
}
.text{
  width:200rpx;
  height: 50rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left:50%;
  margin-top:-25rpx;
  margin-left: -100rpx;
}
.comments{
  height:7rem;
}
.commentsdialog{
  padding: 10rpx;
  height:5.5rem;
  width:70%;
  border:1px solid #d1e9e9;
  color:#000;
  margin-top:0.5rem;
  font-size: 24rpx;
}
/* 滚动列表 */
.contentBottom {
    padding: 20rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: transparent;
    border:2px solid rgba(0,175,180, 1);
    border-radius: 3px;
    width: 85%;
    height: 350rpx;
    margin-top: 1rem;
    box-sizing: border-box;
    overflow: hidden;
}
.tab-right {
    width: 90%;
    margin: 20rpx auto;
    height: 405rpx;
}
.right-item {
    /* padding: 0 20rpx; */
    /* background: #fbeeed; */
    height: 100%;
    width: 100%;
    box-sizing: border-box;
}
.content-item {
    height: 100rpx;
    border-bottom: 1px solid #5cadad;
}
.avater {
    height: 50rpx;
    width: 50rpx;
    border-radius: 100rpx;
    margin-top: 25rpx;
    float: left;
}
.name {
    font-size: 26rpx;
    float: left;
    line-height: 100rpx;
    color: #336666;
    margin-left: 20rpx;
    width: 40%;
    height:100%;
    overflow: hidden;
}
.wawa {
    font-size: 26rpx;
    float: right;
    line-height: 100rpx;
    color: #336666;
}
