<!--index.wxml-->
<view class="container" >
    <view class="userinfo">
      <div bindgetuserinfo="onGetUserInfo" style="background-image: url({{avatarUrl}})" class="userinfo-avatar">
      </div>
      <view class="userinfo-nickname">hello, {{userInfo.nickName}}</view>
    </view>
    <view class="detailPart">
        <view class="tunnel-text">
          <view class="section__title">员工姓名</view>
          <view class="inputdialog">
            <input name="input" value="{{ename}}" placeholder="请输入......" bindinput="getEname"/>
          </view>
        </view>
        <!-- <view class="tunnel-text">
          <view class="section__title">手机号</view>
          <view class="inputdialog">
            <view>{{phone}}</view>
          </view>
        </view> -->
        <view class="tunnel-text">
          <view class="section__title">是否参加</view>
          <radio-group name="radio-group" class="inputdialog" bindchange="getIsJoin">
            <label><radio class="radiobtn" value="1" checked="{{isJoin}}"/>参加</label>
            <label style="margin-left:10%"><radio value="0"  class="radiobtn" checked="{{!isJoin}}"/>不参加</label>
          </radio-group>
    </view>
    <view class="tunnel-text">
      <button form-type="submit" bindtap="formSubmit">提交</button>
      <button form-type="reset" bindtap="formReset">重置</button>
    </view>
    </view>
    
  
      <progress percent="{{Tp}}"  stroke-width="30" class="progress" backgroundColor="light-gray">
        <text class="text">{{Tp}}人已报名</text>
      </progress>

  <image src="cloud://teambuilding-zap24.7465-teambuilding-zap24/df7a88b378a00b1ba69cf03a95ed6ecf.png"/>
</view>
